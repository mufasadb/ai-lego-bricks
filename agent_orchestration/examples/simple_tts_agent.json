{
  "name": "simple_tts_agent",
  "description": "A simple agent that converts text input to speech",
  "config": {
    "default_tts_provider": "coqui_xtts"
  },
  "steps": [
    {
      "id": "get_text_input",
      "type": "input",
      "description": "Get text to convert to speech",
      "config": {
        "prompt": "Enter text to convert to speech:"
      },
      "outputs": ["text_input"]
    },
    {
      "id": "convert_to_speech",
      "type": "tts",
      "description": "Convert text to speech using Coqui-XTTS",
      "config": {
        "provider": "coqui_xtts",
        "voice": "default",
        "output_format": "wav",
        "output_path": "output/tts_output.wav",
        "speed": 1.0
      },
      "inputs": {
        "text": {
          "from_step": "get_text_input",
          "field": "text_input"
        }
      },
      "outputs": ["audio_file_path", "success", "duration_ms"]
    },
    {
      "id": "output_result",
      "type": "output", 
      "description": "Return TTS result",
      "config": {
        "format": "json"
      },
      "inputs": {
        "original_text": {
          "from_step": "get_text_input",
          "field": "text_input"
        },
        "audio_file": {
          "from_step": "convert_to_speech",
          "field": "audio_file_path"
        },
        "success": {
          "from_step": "convert_to_speech",
          "field": "success"
        },
        "duration_ms": {
          "from_step": "convert_to_speech",
          "field": "duration_ms"
        },
        "voice_used": {
          "from_step": "convert_to_speech",
          "field": "voice_used"
        },
        "provider": {
          "from_step": "convert_to_speech",
          "field": "provider"
        },
        "format": {
          "from_step": "convert_to_speech",
          "field": "format_used"
        }
      }
    }
  ]
}