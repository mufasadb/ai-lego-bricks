{
  "name": "anthropic_chat_agent",
  "description": "A chat agent using Anthropic's Claude models",
  "config": {
    "memory_backend": "auto",
    "default_llm_provider": "anthropic",
    "default_model": "claude-3-5-sonnet-20241022"
  },
  "steps": [
    {
      "id": "get_user_input",
      "type": "input",
      "description": "Get user query",
      "config": {
        "prompt": "What would you like to ask Claude?"
      },
      "outputs": ["user_query"]
    },
    {
      "id": "generate_response",
      "type": "llm_chat",
      "description": "Generate AI response using Claude",
      "config": {
        "provider": "anthropic",
        "model": "claude-3-5-sonnet-20241022"
      },
      "inputs": {
        "message": {
          "from_step": "get_user_input",
          "field": "user_query"
        }
      },
      "outputs": ["response"]
    },
    {
      "id": "output_response",
      "type": "output",
      "description": "Return Claude's response",
      "config": {
        "format": "text"
      },
      "inputs": {
        "response": {
          "from_step": "generate_response",
          "field": "response"
        }
      }
    }
  ]
}