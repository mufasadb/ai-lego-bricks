{
  "name": "simple_qa_agent",
  "description": "A simple Q&A agent that takes user input and generates a response (no interactive prompts)",
  "config": {
    "default_llm_provider": "gemini",
    "default_model": "gemini-1.5-flash"
  },
  "steps": [
    {
      "id": "generate_response",
      "type": "llm_chat",
      "description": "Generate AI response to user input",
      "config": {
        "provider": "gemini",
        "model": "gemini-1.5-flash",
        "system_message": "You are a helpful assistant. Provide clear, concise, and friendly responses."
      },
      "inputs": {
        "message": "$user_input"
      },
      "outputs": ["response"]
    },
    {
      "id": "output_response",
      "type": "output",
      "description": "Return the response",
      "config": {
        "format": "text"
      },
      "inputs": {
        "result": {
          "from_step": "generate_response",
          "field": "response"
        }
      }
    }
  ]
}